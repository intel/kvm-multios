<domain type="kvm" xmlns:qemu="http://libvirt.org/schemas/domain/qemu/1.0">
  <name>windows</name>
  <metadata>
    <libosinfo:libosinfo xmlns:libosinfo="http://libosinfo.org/xmlns/libvirt/domain/1.0">
      <libosinfo:os id="http://microsoft.com/win/10"/>
    </libosinfo:libosinfo>
  </metadata>
  <memory>4194304</memory>
  <currentMemory>4194304</currentMemory>
  <memoryBacking>
    <hugepages>
      <page size="2048" unit="KiB"/>
    </hugepages>
    <nosharepages/>
    <source type="memfd"/>
    <access mode="shared"/>
    <allocation mode="immediate"/>
  </memoryBacking>
  <vcpu>2</vcpu>
  <os>
    <type arch="x86_64" machine="q35">hvm</type>
    <loader readonly="yes" type="pflash">/usr/share/OVMF/OVMF_CODE_4M.fd</loader>
    <nvram template="/usr/share/OVMF/OVMF_VARS_4M.fd"/>
    <boot dev="hd"/>
  </os>
  <features>
    <acpi/>
    <apic/>
    <vmport state="off"/>
  </features>
  <cpu mode="host-passthrough"/>
  <clock offset="localtime">
    <timer name="rtc" tickpolicy="catchup"/>
    <timer name="pit" tickpolicy="delay"/>
    <timer name="hpet" present="no"/>
  </clock>
  <pm>
    <suspend-to-mem enabled="yes"/>
    <suspend-to-disk enabled="yes"/>
  </pm>
  <devices>
    <emulator>/usr/bin/qemu-system-x86_64</emulator>
    <disk type="file" device="disk">
      <driver name="qemu" type="qcow2" cache="none" discard="unmap"/>
      <source file="/var/lib/libvirt/images/windows.qcow2"/>
      <target dev="vda" bus="virtio"/>
    </disk>
    <controller type="usb" model="qemu-xhci" ports="15"/>
    <controller type="pci" model="pcie-root"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <interface type="network">
      <source network="default"/>
      <mac address="52:54:00:ab:cd:22"/>
      <model type="virtio"/>
    </interface>
    <console type="pty"/>
    <channel type="unix">
      <source mode="bind"/>
      <target type="virtio" name="org.qemu.guest_agent.0"/>
    </channel>
    <channel type="spicevmc">
      <target type="virtio" name="com.redhat.spice.0"/>
    </channel>
    <redirdev bus="usb" type="spicevmc"/>
    <redirdev bus="usb" type="spicevmc"/>
    <graphics type="spice" port="5952" listen="0.0.0.0">
      <gl enable="yes" rendernode="/dev/dri/renderD128"/>
      <streaming mode="filter"/>
      <mouse mode="client"/>
      <clipboard copypaste="yes"/>
    </graphics>
    <input type="tablet" bus="usb"/>
    <sound model="ich9">
      <codec type="micro"/>
      <audio id="1"/>
      <alias name="sound0"/>
    </sound>
    <audio id="1" type="spice">
      <input mixingEngine="yes" fixedSettings="no"/>
      <output mixingEngine="yes" fixedSettings="no"/>
    </audio>
    <hostdev mode="subsystem" type="pci" managed="yes">
      <source>
        <address domain="0" bus="0" slot="2" function="2"/>
      </source>
      <address type="pci" domain="0" bus="0" slot="2" function="0"/>
    </hostdev>
    <video>
      <!-- blob='on' requires libvirt 9.2 and beyond, so add custom qemu cmdline below for now-->
      <model type="virtio" heads="1" blob="on"/>
      <driver name="qemu"/>
    </video>
  </devices>
  <qemu:commandline>
    <qemu:arg value="-set"/><!-- enable blob for virtio-vga-->
    <qemu:arg value="device.video0.blob=true"/>
    <qemu:arg value="-spice"/>
    <qemu:arg value="preferred-codec=gstreamer:h264"/>
    <qemu:env name="SPICE_CONVERTER_PREFERRED_FORMAT" value="NV12"/>
    <qemu:env name="DISPLAY" value=":0"/>
  </qemu:commandline>
</domain>
